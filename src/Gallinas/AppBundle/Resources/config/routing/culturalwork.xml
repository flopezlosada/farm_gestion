<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="culturalwork" path="/">
        <default key="_controller">AppBundle:CulturalWork:index</default>
    </route>

    <route id="culturalwork_show" path="/{id}/show">
        <default key="_controller">AppBundle:CulturalWork:show</default>
    </route>

    <route id="culturalwork_new" path="/new">
        <default key="_controller">AppBundle:CulturalWork:new</default>
    </route>

    <route id="culturalwork_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:CulturalWork:create</default>
    </route>

    <route id="culturalwork_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:CulturalWork:edit</default>
    </route>

    <route id="culturalwork_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:CulturalWork:update</default>
    </route>

    <route id="culturalwork_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:CulturalWork:delete</default>
    </route>

</routes>
