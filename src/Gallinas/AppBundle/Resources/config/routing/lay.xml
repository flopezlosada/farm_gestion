<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="lay" path="/">
        <default key="_controller">AppBundle:Lay:index</default>
    </route>

    <route id="lay_show" path="/{id}/show">
        <default key="_controller">AppBundle:Lay:show</default>
    </route>

    <route id="lay_new" path="/new">
        <default key="_controller">AppBundle:Lay:new</default>
    </route>

    <route id="lay_create" path="/create">
        <default key="_controller">AppBundle:Lay:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="lay_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Lay:edit</default>
    </route>

    <route id="lay_update" path="/{id}/update">
        <default key="_controller">AppBundle:Lay:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="lay_delete" path="/{id}/delete">
        <default key="_controller">AppBundle:Lay:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
