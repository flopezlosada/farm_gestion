<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="collect" path="/">
        <default key="_controller">AppBundle:Collect:index</default>
    </route>

    <route id="collect_show" path="/{id}/show">
        <default key="_controller">AppBundle:Collect:show</default>
    </route>

    <route id="collect_new" path="/new">
        <default key="_controller">AppBundle:Collect:new</default>
    </route>

    <route id="collect_create" path="/create">
        <default key="_controller">AppBundle:Collect:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="collect_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Collect:edit</default>
    </route>

    <route id="collect_update" path="/{id}/update">
        <default key="_controller">AppBundle:Collect:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="collect_delete" path="/{id}/delete">
        <default key="_controller">AppBundle:Collect:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>
    <route id="collect_lucios" path="/lucios">
        <default key="_controller">AppBundle:Collect:lucios</default>
    </route>
</routes>
