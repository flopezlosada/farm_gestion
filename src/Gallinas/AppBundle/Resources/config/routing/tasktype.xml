<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="tasktype" path="/">
        <default key="_controller">AppBundle:TaskType:index</default>
    </route>

    <route id="tasktype_show" path="/{id}/show">
        <default key="_controller">AppBundle:TaskType:show</default>
    </route>

    <route id="tasktype_new" path="/new">
        <default key="_controller">AppBundle:TaskType:new</default>
    </route>

    <route id="tasktype_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:TaskType:create</default>
    </route>

    <route id="tasktype_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:TaskType:edit</default>
    </route>

    <route id="tasktype_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:TaskType:update</default>
    </route>

    <route id="tasktype_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:TaskType:delete</default>
    </route>

</routes>
