<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="provider" path="/">
        <default key="_controller">AppBundle:Provider:index</default>
    </route>

    <route id="provider_show" path="/{id}/show">
        <default key="_controller">AppBundle:Provider:show</default>
    </route>

    <route id="provider_new" path="/new">
        <default key="_controller">AppBundle:Provider:new</default>
    </route>

    <route id="provider_create" path="/create">
        <default key="_controller">AppBundle:Provider:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="provider_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Provider:edit</default>
    </route>

    <route id="provider_update" path="/{id}/update">
        <default key="_controller">AppBundle:Provider:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="provider_delete" path="/{id}/delete">
        <default key="_controller">AppBundle:Provider:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
