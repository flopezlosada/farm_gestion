<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fowldestination" path="/">
        <default key="_controller">AppBundle:FowlDestination:index</default>
    </route>

    <route id="fowldestination_show" path="/{id}/show">
        <default key="_controller">AppBundle:FowlDestination:show</default>
    </route>

    <route id="fowldestination_new" path="/new">
        <default key="_controller">AppBundle:FowlDestination:new</default>
    </route>

    <route id="fowldestination_create" path="/create">
        <default key="_controller">AppBundle:FowlDestination:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="fowldestination_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:FowlDestination:edit</default>
    </route>

    <route id="fowldestination_update" path="/{id}/update">
        <default key="_controller">AppBundle:FowlDestination:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="fowldestination_delete" path="/{id}/delete">
        <default key="_controller">AppBundle:FowlDestination:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
