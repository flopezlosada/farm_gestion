<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="compostpile" path="/">
        <default key="_controller">AppBundle:CompostPile:index</default>
    </route>

    <route id="compostpile_show" path="/{id}/show">
        <default key="_controller">AppBundle:CompostPile:show</default>
    </route>

    <route id="compostpile_new" path="/new">
        <default key="_controller">AppBundle:CompostPile:new</default>
    </route>

    <route id="compostpile_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:CompostPile:create</default>
    </route>

    <route id="compostpile_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:CompostPile:edit</default>
    </route>

    <route id="compostpile_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:CompostPile:update</default>
    </route>

    <route id="compostpile_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:CompostPile:delete</default>
    </route>

</routes>
