<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="variety" path="/">
        <default key="_controller">AppBundle:Variety:index</default>
    </route>

    <route id="variety_show" path="/{id}/show">
        <default key="_controller">AppBundle:Variety:show</default>
    </route>

    <route id="variety_new" path="/new">
        <default key="_controller">AppBundle:Variety:new</default>
    </route>

    <route id="variety_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:Variety:create</default>
    </route>

    <route id="variety_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Variety:edit</default>
    </route>

    <route id="variety_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:Variety:update</default>
    </route>

    <route id="variety_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:Variety:delete</default>
    </route>

</routes>
