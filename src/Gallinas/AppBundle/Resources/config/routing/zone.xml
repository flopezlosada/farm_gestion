<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="zone" path="/">
        <default key="_controller">AppBundle:Zone:index</default>
    </route>

    <route id="zone_show" path="/{id}/show">
        <default key="_controller">AppBundle:Zone:show</default>
    </route>

    <route id="zone_new" path="/new">
        <default key="_controller">AppBundle:Zone:new</default>
    </route>

    <route id="zone_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:Zone:create</default>
    </route>

    <route id="zone_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Zone:edit</default>
    </route>

    <route id="zone_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:Zone:update</default>
    </route>

    <route id="zone_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:Zone:delete</default>
    </route>

</routes>
