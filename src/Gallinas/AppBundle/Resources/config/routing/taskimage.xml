<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="taskimage" path="/">
        <default key="_controller">AppBundle:TaskImage:index</default>
    </route>

    <route id="taskimage_show" path="/{id}/show">
        <default key="_controller">AppBundle:TaskImage:show</default>
    </route>

    <route id="taskimage_new" path="/new/{task_id}">
        <default key="_controller">AppBundle:TaskImage:new</default>
    </route>

    <route id="taskimage_create" path="/create/{task_id}" methods="POST">
        <default key="_controller">AppBundle:TaskImage:create</default>
    </route>

    <route id="taskimage_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:TaskImage:edit</default>
    </route>

    <route id="taskimage_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:TaskImage:update</default>
    </route>

    <route id="taskimage_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:TaskImage:delete</default>
    </route>

</routes>
