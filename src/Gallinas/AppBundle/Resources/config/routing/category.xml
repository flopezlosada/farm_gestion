<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="category" path="/">
        <default key="_controller">AppBundle:Category:index</default>
    </route>

    <route id="category_show" path="/{id}/show">
        <default key="_controller">AppBundle:Category:show</default>
    </route>

    <route id="category_new" path="/new">
        <default key="_controller">AppBundle:Category:new</default>
    </route>

    <route id="category_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:Category:create</default>
    </route>

    <route id="category_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Category:edit</default>
    </route>

    <route id="category_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:Category:update</default>
    </route>

    <route id="category_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:Category:delete</default>
    </route>

</routes>
