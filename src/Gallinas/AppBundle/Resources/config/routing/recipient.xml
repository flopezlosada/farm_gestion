<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="recipient" path="/">
        <default key="_controller">AppBundle:Recipient:index</default>
    </route>

    <route id="recipient_show" path="/{id}/show">
        <default key="_controller">AppBundle:Recipient:show</default>
    </route>

    <route id="recipient_new" path="/new">
        <default key="_controller">AppBundle:Recipient:new</default>
    </route>

    <route id="recipient_create" path="/create">
        <default key="_controller">AppBundle:Recipient:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="recipient_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Recipient:edit</default>
    </route>

    <route id="recipient_update" path="/{id}/update">
        <default key="_controller">AppBundle:Recipient:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="recipient_delete" path="/{id}/delete">
        <default key="_controller">AppBundle:Recipient:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
