<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="basket" path="/">
        <default key="_controller">AppBundle:Basket:index</default>
    </route>

    <route id="basket_show" path="/{id}/show">
        <default key="_controller">AppBundle:Basket:show</default>
    </route>

    <route id="basket_new" path="/new">
        <default key="_controller">AppBundle:Basket:new</default>
    </route>

    <route id="basket_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:Basket:create</default>
    </route>

    <route id="basket_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Basket:edit</default>
    </route>

    <route id="basket_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:Basket:update</default>
    </route>

    <route id="basket_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:Basket:delete</default>
    </route>

</routes>
