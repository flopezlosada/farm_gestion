{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}AÃ±adir puesta{% endblock %}
{% block main -%}
    <div class="panel panel-default">

        <div class="panel-body">
            {{ form_start(form, {'action': path('lay_create'), 'method': 'post','attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(form.lay_date) }}
                        <label>{{ form_label(form.lay_date) }}</label>
                        {{ form_widget(form.lay_date,{'attr':{'placeholder':'Fecha de puesta'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.amount) }}
                        <label>{{ form_label(form.amount) }}</label>
                        {{ form_widget(form.amount,{'attr':{'class':'form-control','placeholder':'Cantidad de huevos'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.batch) }}
                        <label>{{ form_label(form.batch) }}</label>
                        {{ form_widget(form.batch,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>






    <ul class="record_actions">
        <li>
            <a href="{{ path('lay') }}">
                Back to the list
            </a>
        </li>
    </ul>

{% endblock %}