{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}Editar puesta{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Puesta realizado el <strong>{{ entity.getLayDate|localizeddate('long','none','es') }}</strong>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form, {'action': path('lay_update',{'id':entity.id}), 'method': 'put','attr': {'role': 'form' }}) }}
            {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(edit_form.lay_date) }}
                        <label>{{ form_label(edit_form.lay_date) }}</label>
                        {{ form_widget(edit_form.lay_date,{'attr':{'placeholder':'Fecha de puesta'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.amount) }}
                        <label>{{ form_label(edit_form.amount) }}</label>
                        {{ form_widget(edit_form.amount,{'attr':{'class':'form-control','placeholder':'Cantidad de huevos'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.batch) }}
                        <label>{{ form_label(edit_form.batch) }}</label>
                        {{ form_widget(edit_form.batch,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
            {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-default' }}) }}
            {{ form_rest(edit_form) }}
            {{ form_end(edit_form, {'render_rest': false}) }}
        </div>
    </div>
    <ul class="list-inline">
        <li>
            <a href="{{ path('lay') }}">
                Listado de puestas
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
