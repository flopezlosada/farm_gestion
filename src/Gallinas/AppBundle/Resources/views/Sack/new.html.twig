{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}AÃ±adir Saco de pienso o grano{% endblock %}
{% block main -%}
    <div class="panel panel-default">

        <div class="panel-body">
            <div class="panel panel-green">
                <div class="panel-heading">
                    {{ batch }}
                </div>
            </div>
            {{ form_start(form, {'action': path('sack_create',{'batch_id':batch.id}), 'method': 'post','attr': {'role': 'form' }}
            ) }}
            <div class="row">

                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(form.delivery_date) }}
                        <label>{{ form_label(form.delivery_date) }}</label>
                        {{ form_widget(form.delivery_date,{'attr':{'placeholder':'Fecha de uso' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.purchase) }}
                        <label>{{ form_label(form.purchase) }}</label>
                        {{ form_widget(form.purchase,{'attr':{'placeholder':'Tipo de alimento' }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(form.weight) }}
                        <label>{{ form_label(form.weight) }}</label>
                        {{ form_widget(form.weight,{'attr':{'class':'form-control'}}
                        ) }}
                    </div>
                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default' }}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>






    <ul class="record_actions">
        <li>
            <a href="{{ path('batch_show',{'id':batch.id}) }}">
                Volver al lote
            </a>
        </li>
    </ul>

{% endblock %}