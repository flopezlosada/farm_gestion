{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sack</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Delivery_date</th>
                <td>{{ entity.deliverydate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ entity.weight }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ entity.totalprice }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('sack') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('sack_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
