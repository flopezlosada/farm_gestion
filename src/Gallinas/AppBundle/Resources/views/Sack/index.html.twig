{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sack list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Delivery_date</th>
                <th>Weight</th>
                <th>Total_price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sack_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.deliverydate %}{{ entity.deliverydate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.totalprice }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sack_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sack_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('sack_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
