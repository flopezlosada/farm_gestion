{% extends '::layout_list.html.twig' %}
{% block title_wrapper %}Lista de cultivos en producción activos{% endblock %}
{% block main -%}
<div class="panel panel-default">
    <div class="panel-heading">
        Listado
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table id="table_list" class="table table-striped table-bordered table-hover dataTable no-footer"
                   aria-describedby="dataTables-example_info">
                <thead>
                <tr>

                    <th>Cultivo</th>
                    <th>Superficie</th>
                    <th>Producción estimada</th>
                    <th>Producción real</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('cropworking_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>

                        <td>{{ entity.surface }}</td>
                        <td>{{ entity.estimatedproduction }}</td>
                        <td>{{ entity.getTotalProduction}}</td>

                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('cropworking_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('cropworking_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            {% endblock %}
