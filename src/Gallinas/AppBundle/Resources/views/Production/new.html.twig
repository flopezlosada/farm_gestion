{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}Añadir producción{% endblock %}
{% block main -%}
    <div class="panel panel-default">

        <div class="panel-body">
            {{ form_start(form, {'action': path('production_create'), 'method': 'post','attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(form.crop_working) }}
                        <label>{{ form_label(form.crop_working) }}</label>
                        {{ form_widget(form.crop_working,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.production_date) }}
                        <label>{{ form_label(form.production_date) }}</label>
                        {{ form_widget(form.production_date,{'attr':{'placeholder':'Fecha de cosecha'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.amount) }}
                        <label>{{ form_label(form.amount) }}</label>
                        {{ form_widget(form.amount,{'attr':{'class':'form-control','placeholder':'Kilogramos de producción'}}) }}
                    </div>

                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>






    <ul class="record_actions">
        <li>
            <a href="{{ path('production_show_basket') }}">
                Volver al listado de cestas
            </a>
        </li>
    </ul>

{% endblock %}