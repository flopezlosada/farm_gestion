{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}Añadir Compra{% endblock %}
{% block main -%}
    <div class="panel panel-default">

        <div class="panel-body">
            {{ form_start(form, {'action': path('purchase_create'), 'method': 'post','attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(form.purchase_date) }}
                        <label>{{ form_label(form.purchase_date) }}</label>
                        {{ form_widget(form.purchase_date,{'attr':{'placeholder':'Fecha de compra'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.provider) }}
                        <label>{{ form_label(form.provider) }}</label>
                        {{ form_widget(form.provider,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.amount) }}
                        <label>{{ form_label(form.amount) }}</label>
                        {{ form_widget(form.amount,{'attr':{'class':'form-control','placeholder':'Cantidad'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.product) }}
                        <label>{{ form_label(form.product) }}</label>
                        {{ form_widget(form.product,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(form.unity) }}
                        <label>{{ form_label(form.unity) }}</label>
                        {{ form_widget(form.unity,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.single_price) }}
                        <label>{{ form_label(form.single_price) }}</label>
                        {{ form_widget(form.single_price,{'attr':{'class':'form-control','placeholder':'Precio por unidad'}}) }}
                        <p class="help-block">Indica el precio unitario. Después se multiplicará por la cantidad que indiques para obtener el precio total.</p>
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.batch) }}
                        <label>{{ form_label(form.batch) }}</label>
                        {{ form_widget(form.batch,{'attr':{'class':'form-control'}}) }}
                        <p class="help-block">Si este pedido se relaciona con algún lote de animales, selecciona el lote correspondiente.</p>
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.note) }}
                        <label>{{ form_label(form.note) }}</label>
                        {{ form_widget(form.note,{'attr':{'class':'form-control','placeholder':'Notas'}}) }}
                    </div>
                    <div class="checkbox">
                        {{ form_errors(form.paid) }}
                        <label>
                            {{ form_widget(form.paid) }}
                            Marca esta casilla si la compra está pagada
                        </label>
                    </div>
                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>






    <ul class="record_actions">
        <li>
            <a href="{{ path('purchase') }}">
                Back to the list
            </a>
        </li>
    </ul>

{% endblock %}