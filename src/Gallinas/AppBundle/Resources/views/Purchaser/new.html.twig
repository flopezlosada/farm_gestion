{% block main -%}
    <div class="panel panel-default">

        <div class="panel-body">
            {{ form_start(form, {'action': path('purchaser_create'), 'method': 'post','attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(form.name) }}
                        <label>{{ form_label(form.name) }}</label>
                        {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':'Nombre'}}) }}
                    </div>
                    <div class="checkbox">
                        {{ form_errors(form.regular) }}
                        <label>
                            {{ form_widget(form.regular) }}
                            Marca esta casilla si estx clientx compra huevos de forma regular
                        </label>
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.often_buying_eggs) }}
                        <label>{{ form_label(form.often_buying_eggs) }}</label>
                        {{ form_widget(form.often_buying_eggs,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>






    <ul class="record_actions">
        <li>
            <a href="{{ path('purchaser') }}">
                Back to the list
            </a>
        </li>
    </ul>

{% endblock %}
