    {% extends '::layout_crud.html.twig' %}

    {% block title_wrapper %}Editar {% endblock %}
    {% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">

        </div>
        <div class="panel-body">
            {{ form_start(edit_form, {'action': path('crop_update',{'id':entity.id}), 'method': 'put','attr': {'role': 'form' }}) }}
            {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(edit_form.name) }}
                        <label>{{ form_label(edit_form.name) }}</label>
                        {{ form_widget(edit_form.name,{'attr':{'class':'form-control','placeholder':'Nombre' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.latin_name) }}
                        <label>{{ form_label(edit_form.latin_name) }}</label>
                        {{ form_widget(edit_form.latin_name,{'attr':{'class':'form-control','placeholder':'Nombre en Lat√≠n' }}) }}
                    </div>
                </div>
            </div>
            {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-default' }}) }}
            {{ form_rest(edit_form) }}
            {{ form_end(edit_form, {'render_rest': false}) }}
            {{ form(edit_form) }}
        </div>
    </div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('crop') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    {% endblock %}
