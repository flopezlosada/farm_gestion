{% extends '::layout_list.html.twig' %}
{% block title_wrapper %}Lista de Cultivos{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Listado
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table_list" class="table table-striped table-bordered table-hover dataTable no-footer"
                       aria-describedby="dataTables-example_info">
                    <thead>
                    <tr>
                        <th>Nombre</th>
                        {#<th>Producción año {{ year }}</th>#}
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr role="row">
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('crop_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>

                            {#<td>{{ entity.getTotalProduction }} kg</td>#}

                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('crop_show', { 'id': entity.id }) }}">Mostrar</a>
                                    </li>
                                    {% if entity.isInProduction ==0 %}
                                        <li><a href="{{ path('cropworking_new', {'crop_id': entity.id}) }}">Poner en
                                                producción</a></li>
                                    {% endif %}
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('crop_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
