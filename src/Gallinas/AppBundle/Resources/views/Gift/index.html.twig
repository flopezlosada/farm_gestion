{% extends '::layout_list.html.twig' %}
{% block title_wrapper %}Lista de Regalos{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Listado
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table_list" class="table table-striped table-bordered table-hover dataTable no-footer"
                       aria-describedby="dataTables-example_info">

                    <thead>
                    <tr>
                        <th>Fecha del regalo</th>
                        <th>Agraciadx</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Unidad</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('gift_show', { 'id': entity.id }) }}">
                                {% if entity.giftdate %}{{ entity.giftdate|localizeddate('long','none','es') }}{% endif %}</a></td>
                            <td><a href="{{ path('recipient_show', { 'id': entity.getRecipient.id }) }}">{{ entity.getRecipient }}</a></td>
                            <td>{{ entity.Product}}</td>
                            <td>{{ entity.amount }}</td>
                            <td>{{ entity.Unity }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('gift_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('gift_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('gift_new') }}">
                AÃ±adir regalo
            </a>
        </li>
    </ul>
{% endblock %}
