{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}AÃ±adir Regalo de productos{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Cantidad de producto regalado
        </div>
        <div class="panel-body">
            {{ form_start(form, {'action': path('gift_create'), 'method': 'post','attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(form.gift_date) }}
                        <label>{{ form_label(form.gift_date) }}</label>
                        {{ form_widget(form.gift_date,{'attr':{'placeholder':'Fecha de reparto'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.gift_type) }}
                        <label>{{ form_label(form.gift_type) }}</label>
                        {{ form_widget(form.gift_type,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.recipient) }}
                        <label>{{ form_label(form.recipient) }}</label>
                        {{ form_widget(form.recipient,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.amount) }}
                        <label>{{ form_label(form.amount) }}</label>
                        {{ form_widget(form.amount,{'attr':{'class':'form-control','placeholder':'Cantidad de producto'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.product) }}
                        <label>{{ form_label(form.product) }}</label>
                        {{ form_widget(form.product,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.unity) }}
                        <label>{{ form_label(form.unity) }}</label>
                        {{ form_widget(form.unity,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.single_price) }}
                        <label>{{ form_label(form.single_price) }}</label>
                        {{ form_widget(form.single_price,{'attr':{'class':'form-control','placeholder':'Precio por unidad'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.note) }}
                        <label>{{ form_label(form.note) }}</label>
                        {{ form_widget(form.note,{'attr':{'class':'form-control','placeholder':'Notas'}}) }}
                    </div>

                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>






    <ul class="record_actions">
        <li>
            <a href="{{ path('gift') }}">
                Volver al listado de regalos
            </a>
        </li>
    </ul>

{% endblock %}