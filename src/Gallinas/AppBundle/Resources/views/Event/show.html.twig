{% extends '::layout.html.twig' %}

{% block main -%}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Eventos</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-green">
                <div class="panel-heading">
                    {{ entity.getTitle }}
                </div>
                <div class="panel-body">
                    <p>
                        {{ entity.content }}
                    </p>
                    <p>
                        <strong>Fecha de inicio:</strong> {{ entity.startdate|localizeddate('long','none','es') }}<br>
                        {% if  entity.enddate is defined %}
                        <strong>Fecha de fin:</strong> {{ entity.enddate|localizeddate('long','none','es') }}
                        {% endif %}
                    </p>
                </div>
                <div class="panel-footer">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('event') }}">
                                Ir al listado
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('event_edit', { 'id': entity.id }) }}">
                                Editar
                            </a>
                        </li>
                        <li>{{ form(delete_form) }}</li>
                    </ul>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
{% endblock %}
