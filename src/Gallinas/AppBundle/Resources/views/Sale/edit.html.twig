{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}Editar Venta{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Venta realizado el <strong>{{ entity.getDate|localizeddate('long','none','es') }}</strong>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form, {'action': path('sale_update',{'id':entity.id}), 'method': 'put','attr': {'role': 'form' }}) }}
            {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(edit_form.sale_date) }}
                        <label>{{ form_label(edit_form.sale_date) }}</label>
                        {{ form_widget(edit_form.sale_date,{'attr':{'placeholder':'Fecha de venta' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.purchaser) }}
                        <label>{{ form_label(edit_form.purchaser) }}</label>
                        {{ form_widget(edit_form.purchaser,{'attr':{'class':'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.amount) }}
                        <label>{{ form_label(edit_form.amount) }}</label>
                        {{ form_widget(edit_form.amount,{'attr':{'class':'form-control','placeholder':'Cantidad' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.product) }}
                        <label>{{ form_label(edit_form.product) }}</label>
                        {{ form_widget(edit_form.product,{'attr':{'class':'form-control','placeholder':'Producto' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.unity) }}
                        <label>{{ form_label(edit_form.unity) }}</label>
                        {{ form_widget(edit_form.unity,{'attr':{'class':'form-control','placeholder':'Unidades' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.single_price) }}
                        <label>{{ form_label(edit_form.single_price) }}</label>
                        {{ form_widget(edit_form.single_price,{'attr':{'class':'form-control','placeholder':'Precio por unidad'}}) }}
                        <p class="help-block">Indica el precio unitario. Después se multiplicará por la cantidad que indiques para obtener el precio total.</p>
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.note) }}
                        <label>{{ form_label(edit_form.note) }}</label>
                        {{ form_widget(edit_form.note,{'attr':{'class':'form-control','placeholder':'Notas'}}) }}
                    </div>
                    <div class="checkbox">
                        {{ form_errors(edit_form.paid) }}
                        <label>
                            {{ form_widget(edit_form.paid) }}
                            Marca esta casilla si la venta está pagada
                        </label>
                    </div>

                </div>
            </div>
            {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-default' }}) }}
            {{ form_rest(edit_form) }}
            {{ form_end(edit_form, {'render_rest': false}) }}
        </div>
    </div>
    <ul class="list-inline">
        <li>
            <a href="{{ path('sale') }}">
                Listado de ventas
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
