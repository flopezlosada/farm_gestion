{% extends '::layout_crud.html.twig' %}
{% form_theme form _self %}
{% block checkbox_widget %}
    <div class="checkbox-multiple">
        <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        <label>{{ label }}</label>
    </div>
{% endblock %}
{%- block choice_widget_expanded -%}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            {{- form_widget(child) -}}
        {% endfor -%}
    </div>
{%- endblock choice_widget_expanded -%}


    {% block title_wrapper %}Añadir {% endblock %}
    {% block main -%}
        <div class="panel panel-default">

            <div class="panel-body">
            {{ form_start(form, {'action': path('culturalwork_create'),'method': 'post','attr': {'role': 'form' }}) }}
            <div class='row'>
                <div class="col-lg-12">
                    <div class="form-group">
                        {{ form_errors(form.date) }}
                        <label>{{ form_label(form.date) }}</label>
                        {{ form_widget(form.date,{'attr':{'placeholder':'Fecha' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.sectors) }}
                        <label>{{ form_label(form.sectors) }}</label>
                        {{ form_widget(form.sectors,{'attr':{'class':'','placeholder':'Sectores Afectados' }}) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        {{ form_errors(form.content) }}
                        <label>{{ form_label(form.content) }}</label>
                        {{ form_widget(form.content,{'attr':{'class':'tinymce','placeholder':'Descripción' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.cultural_work_type) }}
                        <label>{{ form_label(form.cultural_work_type) }}</label>
                        {{ form_widget(form.cultural_work_type,{'attr':{'class':'form-control','placeholder':'Tipo' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.crop_workings) }}
                        <label>{{ form_label(form.crop_workings) }}</label>
                        {{ form_widget(form.crop_workings,{'attr':{'class':'','placeholder':'Producción estimada' }}) }}
                    </div>

                </div>
            </div>
            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
                        <ul class="record_actions">
    <li>
        <a href="{{ path('culturalwork') }}">
            Back to the list
        </a>
    </li>
</ul>
        </div>
    </div>
        {{ tinymce_init() }}
    {% endblock %}
