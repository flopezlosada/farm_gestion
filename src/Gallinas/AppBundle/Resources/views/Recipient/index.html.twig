{% extends '::layout_list.html.twig' %}
{% block title_wrapper %}Lista de Agraciadxs{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Listado
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table_list" class="table table-striped table-bordered table-hover dataTable no-footer"
                       aria-describedby="dataTables-example_info">

                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>¿Le regalamos con frecuencia?</th>
                        <th>Frecuencia de regalo</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('recipient_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                            <td>
                                {% if entity.regular==1 %}
                                    Sí
                                {% else %}
                                    No
                                {% endif %}
                            </td>
                            <td>
                                {% if entity.regular==1 %}
                                    {{ entity.getOftenBuyingEggs }} días
                                {% else %}
                                    ---
                                {% endif %}
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('recipient_show', { 'id': entity.id }) }}">mostrar</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('recipient_edit', { 'id': entity.id }) }}">editar</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('recipient_new') }}">
                Añadir agraciadx
            </a>
        </li>
    </ul>
{% endblock %}