{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}Editar Reparto{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
          Reparto realizado el <strong>{{ entity.getCollectDate|localizeddate('long','none','es') }}</strong>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form, {'action': path('collect_update',{'id':entity.id}), 'method': 'put','attr': {'role': 'form' }}) }}
            {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_errors(edit_form.collect_date) }}
                        <label>{{ form_label(edit_form.collect_date) }}</label>
                        {{ form_widget(edit_form.collect_date,{'attr':{'placeholder':'Fecha de reparto' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.amount) }}
                        <label>{{ form_label(edit_form.amount) }}</label>
                        {{ form_widget(edit_form.amount,{'attr':{'class':'form-control','placeholder':'Cantidad de producto' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.product) }}
                        <label>{{ form_label(edit_form.product) }}</label>
                        {{ form_widget(edit_form.product,{'attr':{'class':'form-control','placeholder':'Producto' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.unity) }}
                        <label>{{ form_label(edit_form.unity) }}</label>
                        {{ form_widget(edit_form.unity,{'attr':{'class':'form-control','placeholder':'Unidades' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.user) }}
                        <label>{{ form_label(edit_form.user) }}</label>
                        {{ form_widget(edit_form.user,{'attr':{'class':'form-control' }}) }}
                    </div>

                </div>
            </div>
            {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-default' }}) }}
            {{ form_rest(edit_form) }}
            {{ form_end(edit_form, {'render_rest': false}) }}
        </div>
    </div>
    <ul class="list-inline">
        <li>
            <a href="{{ path('collect') }}">
                Listado de repartos
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
