{% extends '::layout_crud.html.twig' %}

{% block title_wrapper %}AÃ±adir Nota a la tarea {{ entity.getTask }}{% endblock %}
{% block main -%}

    <div class="panel panel-default">

        <div class="panel-body">
            {{ form_start(form, {'action': path('tasknote_create',{'task_id':entity.getTask.id}),'method': 'post','attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        {{ form_errors(form.content) }}
                        <label>{{ form_label(form.content) }}</label>
                        {{ form_widget(form.content,{'attr':{'class':'form-control tinymce'}}) }}
                    </div>
                </div>
            </div>

            {{ form_widget(form.submit,{'attr':{'class':'btn btn-default'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
        <div class="panel-footer">
            <div class="row">
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('task_show',{'id':entity.getTask.id}) }}">
                            Volver a la tarea
                        </a>
                    </li>
                    <li><a href="{{ path('task') }}">Listado de tareas</a> </li>
                </ul>
            </div>
        </div>
    </div>
    {{ tinymce_init() }}
{% endblock %}
